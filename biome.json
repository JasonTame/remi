{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useUniqueElementIds": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":PACKAGE:",
			  ":BLANK_LINE:",
              "@/layouts/**",
			  "@/layouts/*",
              ":BLANK_LINE:",
              "@/components/**",
              "@/components/*",
              ":BLANK_LINE:",
              "@/lib/**",
              "@/lib/*",
              ":BLANK_LINE:",
              "@/hooks/**",
              "@/hooks/*",
              ":BLANK_LINE:",
              "@/types/**",
              "@/types/*",
              ":BLANK_LINE:",
              "@/utils/**",
              "@/utils/*",
              ":BLANK_LINE:",
              "**"
            ]
          }
        }
      }
    }
	}
}
